<div class="col-md-3">
  <div class="side_bar">
    <!-- ライブハウス名 --> 
    <div class="livehouse_top_name"><%= @livehouse.name %></div>

    <!-- 期間検索 -->
    <%= render 'livehouses/period_search', { q_event: @q_event, path: livehouse_events_path(@livehouse.id), limit: { min: Date.current } } %>


    <!-- ライブハウス検索窓 -->
    <%= render 'livehouses/search', { q_livehouse: @q_livehouse, path: livehouse_events_path(@livehouse.id)} %>

    <!-- ライブハウス検索結果 -->
    <div id="livehouses_area">
      <%= render 'livehouses/index', { result_livehouses: @livehouses, q_livehouse: @q_livehouse } %>
    </div>
  </div>
</div>

<div class="col-md-9">

  <!-- スケジュール一覧 -->
  <div id="schedule">
    <div class="schedule row" >
      <%= render "layouts/schedule", {events: @events} %> 
    </div>    
    <%= link_to_next_page @events, 'さらに表示', remote: true, id: 'more_link' %>
  </div>
</div>
