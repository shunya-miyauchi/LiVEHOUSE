<div class="row">
  <div class="col-md-3">

    <div class="side_bar">
      <!-- プロフィール -->
      <%= render 'profile' %>

      <!-- 期間検索 -->
      <%= render 'layouts/period_search', { q_event: @q_event, path: past_joins_user_path(current_user.id), limit: { max: Date.current } } %>

    <!-- ライブハウス検索窓 -->
      <%= render 'layouts/livehouse_search', { q_livehouse: @q_livehouse, path: user_path(current_user.id)} %>

    <!-- ライブハウス検索結果 -->
      <div id="livehouses_area">
        <%= render 'layouts/result_livehouse_search', { livehouses: @livehouses, q_livehouse: @q_livehouse } %>
      </div>
    </div>
  </div>


  <div class="col-md-9">


    <!-- スケジュール一覧 -->
    <div id="schedule">
      <% if @events_past.blank? %>
        <div>参加したイベントはありません。</div>
      <% else %>
        <div class="past_join_title">参戦記録</div>
      <% end %>
      <div class="schedule_past row" >
        <%= render "layouts/schedule", {events: @events_past} %> 
      </div>    
      <%= link_to_next_page @events_past, 'さらに表示', remote: true, id: 'more_link' %>
    </div>
  </div>
</div>