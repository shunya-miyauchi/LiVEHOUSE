<div class="col-lg-3">
  <div>
    <div>プロフィール</div>

    <% if current_user.image? %>
      <div><%= image_tag current_user.image.url(:thumb100) %></div>
    <% else %>
      <div><%= image_tag "default.png" %></div>
    <% end %>
    
    <div><%= current_user.name %></div>
    <div><%= current_user.display_name %></div>
    <%= link_to "編集", edit_user_registration_path(current_user.id) %>
  </div>

  <div>
    <div><%= link_to "ライブ予定", user_path(current_user.id) %></div>
    <div><%= link_to "参加記録", past_joins_user_path(current_user.id) %></div>
    <div><%= link_to "ブログ", blogs_path %></div>
  </div>
</div>

<div class="col-lg-9">
  <div>参照</div>
  <div class="d-flex flex-row bd-highlight mb-1">
    <div class="card" style="width: 8rem;">
      <div class="card-body">
        <div>
          <%= @blog.event.held_on.strftime("%Y") %>
        </div>
        <div>
          <%= @blog.event.held_on.strftime("%m.%d") %>
        </div>
        <div>
          <%= @blog.event.held_on.strftime("%a") %>
        </div>
      </div>
    </div>
    <div class="card" style="width: 40rem;">
      <div class="card-body detail", id="<%= @blog.event.id %>">
        <div>
          <%= @blog.event.title %>
        </div>
        <div>
          <%= @blog.event.artist %>
        </div>
      </div>
    </div>
  </div>

  <div>
    <%= @blog.title %> 
  </div>
  <div>
    <%= @blog.content %> 
  </div>
  <div>
    <% @blog.images.each do |image| %>
      <%= image_tag image.url %>
    <% end %>
  </div>
  <%= link_to "編集", edit_blog_path(@blog) %>
  <%= link_to "削除", blog_path(@blog), method: :delete %>
  <%= link_to "戻る", 'javascript:history.back()' %>
</div>
