<div class="col-lg-3">
<!-- プロフィール -->
  <div class="row">
    <div class="user_profile">
      <div class="col-lg-5">
        <% if current_user.image? %>
          <%= image_tag current_user.image.url,class:"img" %>
        <% else %>
          <%= image_tag "default.png",class:"img" %>
        <% end %>
      </div>
      <div class="col-lg-7">
        <div class="article">
          <div class="name"><%= current_user.name %></div>
          <div class="display_name">@<%= current_user.display_name %></div>
          <%= link_to "編集", edit_user_registration_path(current_user.id), class: "edit_btn" %>
        </div>
      </div>
    </div>
  </div>


  <!-- ライブハウス検索窓 -->
  <%= search_form_for @q_livehouse, url: user_path(current_user.id), remote: true do |f| %>
    <div class="search_livehouse">
      <%= f.collection_select :place_id_eq, Place.all, :id, :prefecture_area, include_blank: "ライブハウス検索" %>
      <%= f.submit '検索', class: "search_btn" %>
    </div>
  <% end %>

  <!-- ライブハウス検索結果 -->
  <div id="livehouses_area">
    <%= render 'livehouses/index', { result_livehouses: @result_livehouses, q_livehouse: @q_livehouse } %>
  </div>
</div>

<div class="col-lg-9">


<div class="blog_new col-lg-9">
  <!-- ブログ投稿 -->
  <div class="title">新規投稿</div>
  <%= form_with( model: @blog,local:true ) do |f| %>
    <div>
      <%= f.collection_select :event_id, current_user.join_events.date_before_today, :id, :date_title,include_blank:"選択してください" %> 
    </div>
    <div>
      <%= f.label :title, 'タイトル',class:"title_label" %>
      <div><%= f.text_field :title,placeholder:"30字以内" %></div>
    </div>
    <div>
      <%= f.label :content, '本文',class:"content_label" %>
      <div><%= f.text_area :content,placeholder:"本文" %></div>
    </div>
    <div class="field">
      <div class="notes">JPG,JPEG,GIF,PNGのみ</div>
      <%= f.label :images, "画像選択",class:"img_label" %><br />
      <%= f.file_field :images, multiple: true,class: "img_input" %>
      <p class='no_select'>選択されていません</p>
    </div>
    <div class="btns">
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.submit '投稿',class:"submit_btn" %> 
      <%= link_to "戻る", 'javascript:history.back()',class:"back" %>
    </div>  
  <% end %>
</div>

<script>
$(function() {
  $('.img_input').on('change', function () { 
    var file = $(this).prop('files')[0]; 
    $('.no_select').text(file.name); 
  });
});
</script>

