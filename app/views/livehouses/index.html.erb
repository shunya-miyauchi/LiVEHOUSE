<%= image_tag "top_image(1920×360).png" %>

<div class="d-flex flex-row justify-content-center">
  <div class="nav flex-column">
    <%= search_form_for @q_livehouse, url: livehouses_path do |f| %>
      <div>
        <%= f.label "ライブハウス検索" %>
      </div>
      <div>
        <%= f.collection_select :place_id_eq, Place.all, :id, :prefecture_area %>
      </div>
      <%= f.submit '検索' %>
    <% end %>

    <% if @q_livehouse.conditions.present? %>
      <ul class="nav flex-column">
        <% @result_livehouses.each do |livehouse| %>
          <li class="nav-item">
            <%= link_to "#{livehouse.name}", livehouse_events_path(livehouse.id,q: {place_id_eq: @q_livehouse.conditions[0].value}) %>
            <span id="favorite_<%= livehouse.id %>"><%= render 'events/livehouse', { livehouse: livehouse } %></span>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>