<%= image_tag "top_img.png", class: "top_img" %>
<%= image_tag "top_logo.png", class: "top_logo" %>

<div class="search_form col-sm-7 col-xl-5 ">
  <%= search_form_for @q_livehouse, url: livehouses_path, remote: true do |f| %>
    <div class="search_livehouse">
      <%= f.collection_select :place_id_eq, Place.all, :id, :prefecture_area, include_blank: "ライブハウス検索" %>
      <%= f.submit '検索', class: "search_btn" %>
    </div>
  <% end %>


  <div id="livehouses_area">
    <%= render 'index', { result_livehouses: @result_livehouses, q_livehouse: @q_livehouse } %>
  </div>
</div>